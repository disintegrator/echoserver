{
  "variables": {
  },
  "builders": [{
    "type": "docker",
    "image": "node:4-slim",
    "export_path": "image.tar"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": ".",
      "destination": "/app"
    },
    {
      "type": "shell",
      "inline": [
        "echo Install app dependencies",
        "cd /app",
        "npm install"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "amazon-import",
      "region": "ap-southeast-2",
      "s3_bucket_name": "poc-asgh",
      "tags": {
        "Description": "packer amazon-import {{timestamp}}"
      }
    }
  ]
}
